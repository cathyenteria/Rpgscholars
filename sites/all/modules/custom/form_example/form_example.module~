<?php

/*
*Implement hook_permission().
*/

function form_example_permission() {
	return array(
	  'submit form_example' => array(
	  'title' => t('Submit form_example'),
	  'description' => t('Submit the form_example form'),
   );
}

/*
*Implements form_example_menu().
*/

function form_example_menu() {
	$items = array();
	$items['form-example'] =array(
		'title' => 'My Example Form'),
		'type' => MENU_NORMAL_ITEM,
		'access arguments' => array('submit form_example'),
		'page callback' => 'drupal_get_form',
		'page arguments' => array('form_example_form'),
	);

	return $items;
}

/*
* My Form Exmple.
*/


function form_example_form($form, &$form_state) {
	
	$from['mynumber'] = array (
		'#type' => 'textfield',
		'#title' => ('My number'),
		'#size' => 10,
		'#maxlength' => 10,
		'#required' => TRUE,
		'#description' => ('Please input valid number'),

	);

	$from['mytextfield'] = array (
		'#type' => 'textfield',
		'#title' => ('My Textfield'),
		'#size' => 60,
		'#maxlength' => 120,
		'#required' => TRUE,
		
	);

	$from['mytext'] = array (
		'#type' => 'texarea',
		'#title' => ('My Textarea'),
		'#description' => ('Some text here'),
		'#default_value' => '',
		'#required' => TRUE,

	);

	$from['submit'] = array (
		'#type' => 'submit',
		'#value' => ('Save'),

	);

	return $form;
}



















